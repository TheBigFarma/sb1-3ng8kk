<section class="py-16 bg-gray-50">
    <div class="container mx-auto grid grid-cols-2 md:grid-cols-4 gap-6">
        {% for product in collections['frontpage'].products %}
            <div class="bg-white rounded-xl overflow-hidden shadow-md">
                <a href="{{ product.url }}">
                    <img src="{{ product.featured_image | image_url: 'medium' }}" alt="{{ product.title }}" class="w-full h-48 object-cover">
                </a>
                <div class="p-4">
                    <h3 class="text-lg font-semibold">{{ product.title }}</h3>
                    <p class="text-gray-600">{{ product.price | money }}</p>
                    <a href="{{ product.url }}" class="block text-center bg-emerald-500 hover:bg-emerald-600 text-white py-2 mt-4 rounded-lg">
                        Voir le produit
                    </a>
                </div>
            </div>
        {% endfor %}
    </div>
</section>