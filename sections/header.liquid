<header class="fixed top-0 left-0 right-0 bg-white shadow-sm z-50">
  <div class="container mx-auto px-4 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="{{ shop.url }}">
      <img src="{{ 'logo.svg' | asset_url }}" alt="Logo" class="h-12">
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex items-center space-x-8">
      <a href="/" class="text-gray-700 hover:text-emerald-600">Accueil</a>
      <a href="/collections/all" class="text-gray-700 hover:text-emerald-600">Produits</a>
      <a href="/contact" class="text-gray-700 hover:text-emerald-600">Contact</a>
    </nav>

    <!-- Barre de recherche -->
    <form action="/search" method="get" class="hidden md:flex items-center space-x-2">
      <input type="text" name="q" placeholder="Rechercher..." class="border rounded-full px-4 py-2">
      <button type="submit" class="text-gray-600 hover:text-emerald-600">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="h-5 w-5">
          <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"></path>
        </svg>
      </button>
    </form>
  </div>
</header>