<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ page_title }}</title>
    
    <!-- Favicon -->
    <link rel="icon" href="{{ 'favicon.ico' | asset_url }}">

    <!-- Styles CSS -->
    <link rel="stylesheet" href="{{ 'tailwind.css' | asset_url }}">
    <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">

    <!-- Scripts -->
    <script src="{{ 'custom.js' | asset_url }}" defer></script>
    <script src="{{ 'theme.js' | asset_url }}" defer></script>

    <!-- Shopify Liquid Metafields -->
    {{ content_for_header }}
</head>
<body class="bg-gray-50 text-gray-800">

    <!-- En-tÃªte -->
    {% section 'header' %}

    <!-- Contenu principal -->
    <main role="main" class="min-h-screen">
        {{ content_for_layout }}
    </main>

    <!-- Pied de page -->
    {% section 'footer' %}

    <!-- Shopify Liquid Scripts -->
    {{ content_for_footer }}
</body>
</html>